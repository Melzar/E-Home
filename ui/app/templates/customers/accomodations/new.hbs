<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Add Accomodation</h2>
        <ol class="breadcrumb">
            <li>
              {{#link-to "customers.dashboard"}}Dashboard{{/link-to}}
            </li>
            <li>
              {{#link-to "customers.accomodations"}}Accomodations{{/link-to}}
            </li>
            <li class="active">
              {{#link-to "customers.accomodations.new"}}<strong>Add</strong>{{/link-to}}
            </li>
        </ol>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-xs-12 col-sm-offset-3 col-sm-6">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Provide your new Accomodation details</h5>
                </div>
                <div class="ibox-content">
                    <form {{action "save" on="submit"}}>
                        <div class="form-group">
                            <label class="control-label">Name</label>
                          {{input value=model.name id="name" type="text" placeholder="eg. My home at creek"
                          class="form-control"}}
                          {{form.field-error errors=model.errors.name }}
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-8 col-lg-6">
                                    <label class="control-label">Address 1</label>
                                  {{input value=model.address_1 id="address_1" type="text" placeholder="eg. Space street"
                                  class="form-control"}}
                                  {{form.field-error errors=model.errors.address_1  }}
                                </div>
                                <div class="col-xs-4 col-lg-6">
                                    <label class="control-label">Address 2</label>
                                  {{input value=model.address_2 id="address_2" type="text" placeholder="eg. 31/08"
                                  class="form-control"}}
                                  {{form.field-error errors=model.errors.address_2  }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-lablel">City</label>
                            {{input value=model.city id="city" type="text" placeholder="eg. Washington"
                            class="form-control"}}
                            {{form.field-error errors=model.errors.city }}
                        </div>
                        <div class="form-group">
                            <label class="control-label">Zip</label>
                            {{input value=model.zip id="zip" type="text" placeholder="eg. eg. 00-000"
                            class="form-control"}}
                            {{form.field-error errors=model.errors.zip }}
                        </div>
                        <div class="form-group">
                            <label class="control-label">Latitude</label>
                            {{input value=model.latitude id="latitude" type="text" placeholder="eg. 50.0000"
                            class="form-control"}}
                            {{form.field-error errors=model.errors.latitude }}
                        </div>
                        <div class="form-group">
                            <label class="control-label">Longitude</label>
                            {{input value=model.longitude id="longitude" type="text" placeholder="eg. 50.0000"
                            class="form-control"}}
                            {{form.field-error errors=model.errors.longitude }}
                        </div>
                        <div class="form-group clear">
                            <a id="cancel" {{action "cancel" }} class="btn btn-danger btn-sm pull-left">Cancel</a>
                            <button
                                    id="submit"
                                    type="submit"
                                    class="btn btn-primary btn-sm pull-right"
                                    disabled={{if model.isValid false true}}>
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

{{outlet}}