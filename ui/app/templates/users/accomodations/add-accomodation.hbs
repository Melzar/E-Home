<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Add Accomodation</h2>
        <ol class="breadcrumb">
            <li>
              {{#link-to "users.dashboard"}}Dashboard{{/link-to}}
            </li>
            <li>
              {{#link-to "users.accomodations"}}Accomodations{{/link-to}}
            </li>
            <li class="active">
              {{#link-to "users.accomodations.add-accomodation"}}<strong>Add</strong>{{/link-to}}
            </li>
        </ol>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-xs-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Provide your new Accomodation details</h5>
                </div>
                <div class="ibox-content">
                    <form>
                        <div class="form-group">
                            <label class="control-label">Name</label>
                            <input type="text" placeholder="eg. My home at creek" class="form-control">
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-lg-6">
                                    <label class="control-label">Address 1</label>
                                    <input type="password" placeholder="eg. Space street" class="form-control">
                                </div>
                                <div class="col-lg-6">
                                    <label class="control-label">Address 2</label>
                                    <input type="text" placeholder="eg. 31/08" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

{{outlet}}