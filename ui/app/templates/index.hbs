<div class="middle-box text-center loginscreen  animated fadeInDown">
    <div>
        <div>
            <h1 class="logo-name">eH</h1>
        </div>
        <h3>Welcome to eHome</h3>
        <p>Login in. To see it in action.</p>
        <form class="m-t ng-pristine ng-valid" role="form" novalidate>
            <div class="form-group">
                <input type="email" class="form-control" placeholder="Username" required="">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password" required="">
            </div>
            {{#link-to "users.dashboard" class="btn btn-primary block full-width m-b"}}Login{{/link-to}}
            {{#link-to "reset-password"}}<small>Forgot password?</small>{{/link-to}}
            <p class="text-muted text-center"><small>Do not have an account?</small></p>
            {{#link-to "sign-up" class="btn btn-sm btn-white btn-block"}}Create an account{{/link-to}}
        </form>
    </div>
</div>