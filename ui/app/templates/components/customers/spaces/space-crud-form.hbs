<form {{ action 'save' on='submit'}}>
    <div class="form-group">
        <label class="control-label">Accomodation</label>
      {{#power-select
      searchEnabled=false
      selected=model.accomodation
      options=accomodations
      onchange=(action "applyAccomodation") as |accomodation|
      }}
        {{accomodation.name}}
      {{/power-select}}
    </div>
    <div class="form-group">
        <label class="control-label">Space Name</label>
      {{input value=model.name id="name" type='text' placeholder='eg. Parent\'s room' class='form-control'}}
      {{form.field-error errors=model.errors.name }}
    </div>
    <div class="form-group">
        <label class="control-label">Space type</label>
        {{#power-select
        searchEnabled=false
        selected=model.space_type
        options=spaceTypes
        onchange=(action "applySpaceType") as |spaceType|
        }}
          {{spaceType.name}}
        {{/power-select}}
    </div>
    <div class="form-group row">
        <div class="col-xs-4 text-left">
            <a id="cancel" {{action "cancel" }} class="btn btn-success btn-sm">Cancel</a>
        </div>
        <div class="col-xs-4 text-center">
            <a id="delete" {{action "delete" }} class="btn btn-danger btn-sm">Delete</a>
        </div>
        <div class="col-xs-4 text-right">
            <button id="submit" type="submit" class="btn btn-primary btn-sm" disabled={{if model.isValid false true}}>
                Save
            </button>
        </div>


    </div>
</form>

{{yield}}
