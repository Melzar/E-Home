<form {{ action 'save' on='submit'}}>
    <div class="form-group">
        <label class="control-label">Space</label>
      {{#power-select
      searchEnabled=false
      selected=model.space
      options=spaces
      onchange=(action "applySpace") as |space|
      }}
        {{space.name}}
      {{/power-select}}
    </div>
    <div class="form-group">
        <label class="control-label">Control Name</label>
      {{input value=model.name id="name" type='text' placeholder='eg. Entrance light' class='form-control'}}
      {{form.field-error errors=model.errors.name }}
    </div>
    <div class="form-group">
        <label class="control-label">Control type</label>
      {{#power-select
      searchEnabled=false
      selected=model.control_type
      options=controlTypes
      onchange=(action "applyControlType") as |controlType|
      }}
        {{spaceType.name}}
      {{/power-select}}
    </div>
    <div class="form-group row">
        <div class="col-xs-4 text-left">
            <a id="cancel" {{action "cancel" }} class="btn btn-success btn-sm">Cancel</a>
        </div>
        <div class="col-xs-4 text-center">
            <a id="delete" {{action "delete" }} class="btn btn-danger btn-sm">Delete</a>
        </div>
        <div class="col-xs-4 text-right">
            <button id="submit" type="submit" class="btn btn-primary btn-sm" disabled={{if model.isValid false true}}>
                Save
            </button>
        </div>
    </div>
</form>
{{yield}}
