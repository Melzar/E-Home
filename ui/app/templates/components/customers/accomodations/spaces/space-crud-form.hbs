<form {{ action 'save' on='submit'}}>
    <div class="form-group">
        <label class="control-label">Space Name</label>
      {{input value=model.name id="name" type='text' placeholder='eg. Parent\'s room' class='form-control'}}
      {{form.field-error errors=model.errors.name }}
    </div>
    <div class="form-group">
        <label class="control-label">Space type</label>
        {{#power-select
        searchEnabled=false
        selected=model.space_type
        options=spaceTypes
        onchange=(action "applySpaceType") as |spaceType|
        }}
          {{spaceType.name}}
        {{/power-select}}
    </div>
    <div class="form-group clear">
        <a id="cancel" {{action "cancel" }} class="btn btn-danger btn-sm pull-left">Cancel</a>
        <button
                id="submit"
                type="submit"
                class="btn btn-primary btn-sm pull-right"
                disabled={{if model.isValid false true}}>
            Save
        </button>
    </div>
</form>

{{yield}}
